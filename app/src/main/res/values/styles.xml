<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">
    </style>
    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/windowBackground</item>
        <item name="android:textColorHint">@color/colorControlNormal</item>
        <item name="drawerArrowStyle">@style/MyMaterialTheme.drawerArrowStyle</item>
    </style>

    <style name="MyMaterialTheme.drawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/windowBackground</item>
    </style>
    <style name="ToolbarTheme" parent="@style/Base.Widget.AppCompat.Toolbar">
        <item name="android:actionMenuTextColor">@color/windowBackground</item>
        <item name="android:textColor">@color/windowBackground</item>
        <item name="colorControlNormal">@color/windowBackground</item>
    </style>
    <style name="DrawerItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#555555</item>
    </style>
    <style name="ActionModeTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:color">@color/colorPrimary</item>
    </style>
    <style name="ActionModeStyle" parent="Base.Widget.AppCompat.ActionMode">
        <item name="android:titleTextStyle">@style/ActionModeTextStyle</item>
    </style>
    <style name="TabLayoutTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
        

</resources>
